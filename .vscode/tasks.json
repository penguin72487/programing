{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "cppbuild",
          "label": "C/C++: g++.exe build active file",
          "command": "C:/msys64/mingw64/bin/g++.exe",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "compiler: C:/msys64/mingw64/bin/g++.exe"
      },
      {
          "label": "build",
          "type": "shell",
          "command": "g++ -g -std=c++14 -Wall -I C:/SFML-2.5.1/include ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe -L C:/SFML-2.5.1/lib -lsfml-graphics -lsfml-window -lsfml-system",
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": "$gcc"
      }
  ]
}
